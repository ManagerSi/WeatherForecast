@{
    ViewBag.Title = "Carousel1";
}

<h2>Carousel1</h2>
<div class="lb">
   <input type="text" id="txt" />
  <div class="ss"></div>
</div>

<script type="text/javascript" src="~/Scripts/jquery-2.1.4.min.js"></script>
<style type="text/css">
    .lb{
        margin:auto;
        text-align:center;
        position:relative;
    }
    .ss {
        border:solid 1px #ccc;
        width:200px;
        height:30px;
        margin:auto;
        display:none;
    }
</style>

<script type="text/javascript" >
    $().ready(function () {
        $("#txt").keyup(function () {
            var title = $(this).val();
            if (title != undefined && title != "") {
                $(".ss").show();
            } else {
                $(".ss").hide();
            }
        })
    });
</script>
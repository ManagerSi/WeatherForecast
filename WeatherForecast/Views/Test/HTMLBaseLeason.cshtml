@* 上下级 *@
<style>
    a{
        display:block;
    }
    #d2 ul{
        display:none;
    }
</style>
<script>
    $(function () {
        $("#d2 a").click(function () {
            var a = $(this).next();

            $(this).next().show(500).siblings("ul").hide();
        });

        $("#d2 li").click(function () {
            if ($(this).parent().attr("id") == "u1") {
                //"position", "absolute" 脱离文档流
                $(this).css("position", "absolute").animate({ "right": "30px" }, 1000, function () {
                    $(this).appendTo($("#u2")).css("position", "static");
                });
            }
        });
    });
  
</script>

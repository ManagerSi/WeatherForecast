<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="pragma" content="no-cache" />
        <meta http-equiv="Cache-Control" content="no-cache, must-revalidate" />
        <meta http-equiv="expires" content="-1" />
        <link rel="icon" href="/favicon.ico" type="image/x-icon" />
        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
        <title>雅培中国-@ViewBag.Title</title>

        <script src="~/Scripts/jquery-2.1.4.min.js"></script>
        <link href="~/Scripts/bootstrap.css" rel="stylesheet" />
        <link href="~/Scripts/bootstrap-theme.css" rel="stylesheet" />
        <script src="~/Scripts/bootstrap.js"></script>

        <script type="text/javascript">
            function switchSysBar() {
                $(".leftbar_left").toggle("slide", {}, 500, function () {
                    var url = $(".leftbar_left").is(":visible") ?
                'url("@Url.Content("~/Content/admin/images/rlbtn.jpg")")' :
                'url("@Url.Content("~/Content/admin/images/leftbtn.jpg")")';
                    $("#switchPoint").css("backgroundImage", url);
                });
            }
            $(function () {
                $("firstFieldSelector").focus(function () { return false; });
            });
            $(function () {
                $(window).resize(function () {
                    var l = $(window).width();
                    if (l < 970) {
                        $("#headbgright").fadeOut();
                    } else {
                        $("#headbgright").fadeIn();
                    }
                });
            });
            $(function () {
                $("#ajaxErrorDialog").ajaxError(function (e, jqxhr, settings, exception) {
                    // cancelling request, this is not a real error
                    if (jqxhr.status === 0 || jqxhr.readyState === 0) {
                        return;
                    }

                    $("#ajaxErrorDialog").html(jqxhr.responseText);
                    $("#ajaxErrorDialog").dialog({
                        width: 800,
                        height: 600,
                        title: 'Ajax异常',
                        modal: true,
                        position: 'center'
                    });
                });
            });

        </script>
    </head>
    <body>
       
    <!-- Error Div -->
        <div id="ajaxErrorDialog" style="display: none">
        </div>
        <div class="indexbox">
        <!-- nav start -->
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-9">
                        您好! @((User.Identity as WeatherLib.Security.SampleIdentity).BaseEmployee.Name)，欢迎登录！今天是
                        @System.DateTime.Now.ToShortDateString()
                        @Html.ActionLink("退出","LoginOut","AdminAccount")
                    </div>
                </div>
                
            </div>
       
            <h3 class="pull-left text-center" style="width:20%;margin-top: -5px;">MyWeb</h3>
            <ul class="nav nav-tabs">
                @* class = nav-pills   nav-tabs  navbar-default*@
                @helper NavItem(string name,string contorllerName) {
                    <li role="presentation" class="@(contorllerName == ViewBag.CurrentControllerName ? " active" : "")">@Html.ActionLink(name,"Index",contorllerName)</li>
}

                @if(User.IsInRole(WeatherLib.Security.WeatherRole.RoleAdmin)) {
                    @NavItem("首页","Dashboard")
                }


                @if(User.IsInRole(WeatherLib.Security.WeatherRole.RoleAdmin)) {
                    @NavItem("报表查询","Report")
                }

                @if(User.IsInRole(WeatherLib.Security.WeatherRole.RoleAdmin)) {
                    @NavItem("系统设置","Setting")
                }

            </ul>   
                    
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#" style="margin-left:30px;margin-right:20px;">MyWeb</a>
                    </div>
                    
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            @*<li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>*@
                            @helper NavItemForNav(string name,string contorllerName) {
                                <li class="@(contorllerName == ViewBag.CurrentControllerName ? " active" : "")">@Html.ActionLink(name,"Index",contorllerName)</li>
                            }

                            @if(User.IsInRole(WeatherLib.Security.WeatherRole.RoleAdmin)) {
                                @NavItemForNav("首页","Dashboard")
                            }


                            @if(User.IsInRole(WeatherLib.Security.WeatherRole.RoleAdmin)) {
                                @NavItemForNav("报表查询","Report")
                            }

                            @if(User.IsInRole(WeatherLib.Security.WeatherRole.RoleAdmin)) {
                                @NavItemForNav("系统设置","Setting")
                            }
                        </ul>
                        @*<form class="navbar-form navbar-left">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Search">
                            </div>
                            <button type="submit" class="btn btn-default">Submit</button>
                        </form>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#">Link</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">dropdown <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">action</a></li>
                                    <li><a href="#">another action</a></li>
                                    <li><a href="#">something else here</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="#">separated link</a></li>
                                </ul>
                            </li>
                        </ul>*@
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </div>
        <!--  nav end  -->
        @RenderBody()
        <!--  content end  -->
        <!--  footer  -->
        @if(IsSectionDefined("FootSection")) {
            @RenderSection("FootSection")
        } else {
            <div class="container">
                <div class="text-center">
                    版权所有
                </div>
            </div>
        }
        <!--  footer end  -->
        <div id="divSCA">
            <div id="divtit">
                数据加载中......
            </div>
            <center>
                <img src="@Url.Content("~/Content/admin/images/load.gif")">
            </center>
        </div>
    </body>
</html>
